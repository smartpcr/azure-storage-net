{
  "version": "6.2.2.0",
  "dependencies": {
    "xunit": "2.1.0-*",
    "xunit.runner.dnx": "2.1.0-*",
    "Microsoft.WindowsAzure.Storage": "",
    "XUnitForMsTest": ""
  },

  "commands": {
    "test": "xunit.runner.dnx"
  },

  "frameworks": {
    "dnxcore50": {
      "dependencies": {
        "System.Runtime": "4.0.20-beta-*"
      }
    }
  },

  "compilationOptions": {
    "define": [ "ASPNET_K", "XUNIT" ],
    "delaySign": true,
    "keyFile":  "MSSharedLibKey.snk"
  },

  "compile": [
        "**/*.cs",
        "../../Common/*.cs",
        "../../Common/Blob/*.cs",
        "../../Common/Core/*.cs",
        "../../Common/File/*.cs",
        "../../Common/Queue/*.cs",
        "../../Common/Table/*.cs",
        "../../Common/Table/Entities/*.cs",
        "../../Common/TestConfigProcess/**/*.cs",

        "../../WindowsRuntime/Core/**/*.cs",
        "../../WindowsRuntime/Blob/**/*.cs",
        "../../WindowsRuntime/Queue/**/*.cs",
        "../../WindowsRuntime/File/**/*.cs",
        "../../WindowsRuntime/Table/**/*.cs"
  ]
}
